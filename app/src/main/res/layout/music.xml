<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#e2dFd6"
    android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:text="音乐"
                    android:textSize="20sp" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:layout_collapseMode="pin"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:titleTextColor="#ffffff" />


        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_marginTop="55dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:layout_width="190dp"
            android:layout_height="171dp"
            android:background="@drawable/northeast1"
            android:textSize="20dp"
            android:textColor="#fff"
            android:id="@+id/t2"
            />
        <Button
            android:layout_width="190dp"
            android:layout_height="171dp"
            android:background="@drawable/northeast"
            android:text="#东北歌#"
            android:textSize="20dp"
            android:textColor="#fff"
            android:id="@+id/t1"
            />
        <Button
            android:layout_width="190dp"
            android:layout_height="171dp"
            android:layout_marginLeft="190dp"
            android:background="@drawable/minnan1"
            android:id="@+id/t4"
            />
        <Button
            android:layout_width="190dp"
            android:layout_height="171dp"
            android:layout_marginLeft="190dp"
            android:background="@drawable/minnan"
            android:text="#闽南语#"
            android:textSize="20dp"
            android:textColor="#fff"
            android:id="@+id/t3"
            />


        <Button
            android:layout_width="190dp"
            android:layout_height="171dp"
            android:background="@drawable/shanghai1"
            android:layout_below="@+id/t1"
            android:id="@+id/t6"
            />
        <Button
            android:layout_width="190dp"
            android:layout_height="171dp"
            android:background="@drawable/shanghai"
            android:text="#上海歌#"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_below="@+id/t1"
            android:id="@+id/t5"
            />
        <Button
            android:layout_width="190dp"
            android:layout_height="171dp"
            android:layout_marginLeft="190dp"
            android:background="@drawable/yue1"
            android:layout_below="@+id/t3"
            android:id="@+id/t8"
            />
        <Button
            android:layout_width="190dp"
            android:layout_height="171dp"
            android:layout_marginLeft="190dp"
            android:background="@drawable/yue"
            android:layout_below="@+id/t3"
            android:text="#粤语#"
            android:textSize="20dp"
            android:textColor="#fff"
            android:id="@+id/t7"
            />


        <Button
            android:layout_width="190dp"
            android:layout_height="171dp"
            android:background="@drawable/hebei1"
            android:layout_below="@+id/t5"
            android:id="@+id/t10"
            />
        <Button
            android:layout_width="190dp"
            android:layout_height="171dp"
            android:background="@drawable/hebei"
            android:text="#河北歌#"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_below="@+id/t5"
            android:id="@+id/t9"
            />
        <Button
        android:layout_width="190dp"
        android:layout_height="171dp"
        android:layout_marginLeft="190dp"
        android:background="@drawable/changsha1"
        android:layout_below="@+id/t7"
        android:id="@+id/t12"
        />
        <Button
            android:layout_width="190dp"
            android:layout_height="171dp"
            android:layout_marginLeft="190dp"
            android:background="@drawable/changsha"
            android:layout_below="@+id/t7"
            android:text="#长沙语#"
            android:textSize="20dp"
            android:textColor="#fff"
            android:id="@+id/t11"
            />

        </RelativeLayout>
</RelativeLayout>
